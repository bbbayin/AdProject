<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="colorControlNormal">@color/colorControlNormal</item>
        <item name="md_corner_radius">16dp</item>

        <!--        <item name="android:actionButtonStyle">@style/myActionButtonStyle</item>-->
        <!--        <item name="buttonBarPositiveButtonStyle">@style/positiveBtnStyle</item>-->
        <!--        <item name="buttonBarNegativeButtonStyle">@style/negativeBtnstyle</item>-->

    </style>

    <style name="myActionButtonStyle" parent="Widget.AppCompat.ActionButton">
        <item name="android:minWidth">24dp</item>
        <item name="android:maxWidth">40dp</item>
        <item name="android:width">40dp</item>
    </style>

    <style name="AppNoActionBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionButtonStyle">@style/myActionButtonStyle</item>
    </style>

    <style name="AppNoActionBarThemeNoAnimation" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionButtonStyle">@style/myActionButtonStyle</item>
        <item name="android:windowBackground">@color/transparent</item>
    </style>


    <style name="DialogTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
    </style>

    <style name="DialogAnimStyle"></style>

    <style name="Storage_style" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/storage_style</item>
    </style>

    <style name="MainNavMenuTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/main_nav_text_color</item>
    </style>




    <style name="WindowAnimationFadeInOut">
        <item name="android:windowEnterAnimation">@anim/anim_animo_alph_open</item>
        <item name="android:windowExitAnimation">@anim/anim_animo_alph_close</item>
    </style>

</resources>
