<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:myApplication="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_scrollview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.MainNavActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusableInTouchMode="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            myApplication:layout_constraintTop_toTopOf="parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/ad_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                myApplication:cardCornerRadius="@dimen/cardview_conrner_radius"
                myApplication:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/img_btn"
                android:layout_marginTop="@dimen/size_20dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="200dp"
                android:text="Img_page"
                android:layout_height="@dimen/size_80dp"/>

            <Button
                android:id="@+id/video_btn"
                android:layout_marginTop="@dimen/size_20dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="200dp"
                android:text="Video_page"
                android:layout_height="@dimen/size_80dp"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>